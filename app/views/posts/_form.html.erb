<%= form_for @post do |f| %>
  <%= render 'shared/errors', :object => @post %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br/>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <br/>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br/>
    <%= f.label :categories %>
    <%= f.select :category_ids, Category.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
    <br/>
    <%= f.submit class: 'btn' %>
<% end %>